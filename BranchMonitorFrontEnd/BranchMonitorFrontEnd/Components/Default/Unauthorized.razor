@* @page "/unauthorized" *@
@inject NavigationManager Navigation

<div class="unauthorized-wrapper">
    <div class="unauthorized-background">
        <div class="grid-pattern"></div>
        <div class="scan-line"></div>
        <div class="floating-circle circle-1"></div>
        <div class="floating-circle circle-2"></div>
    </div>

    <div class="unauthorized-content col-12 " >
        <div class="row" style="width:100%">

            <div class="lock-animation col-4 d-flex justify-content-center align-items-center flex-column">
                <!-- Animated Lock with Shield -->
                <div class="shield-container">
                    <svg class="shield-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    </svg>
                    <svg class="lock-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                    <div class="lock-pulse"></div>
                </div>

                <div class="error-code">
                    <span class="code-digit">4</span>
                    <span class="code-digit code-middle">0</span>
                    <span class="code-digit">3</span>
                </div>
            </div>

            <div class="unauthorized-details col-8">
                <h1 class="unauthorized-title">Access Denied</h1>
                <p class="unauthorized-subtitle">Unauthorized Access Attempt Detected</p>
                <p class="unauthorized-message">
                    You don't have permission to access this resource. This area is restricted to authorized personnel only.
                    If you believe this is an error, please contact your system administrator.
                </p>

                <div class="security-info">
                    <div class="info-card">
                        <div class="info-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                        </div>
                        <div class="info-content">
                            <h3>Authentication Required</h3>
                            <p>Valid credentials needed</p>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="info-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="8.5" cy="7" r="4"></circle>
                                <polyline points="17 11 19 13 23 9"></polyline>
                            </svg>
                        </div>
                        <div class="info-content">
                            <h3>Authorized Users Only</h3>
                            <p>Administrator access required</p>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="info-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                            </svg>
                        </div>
                        <div class="info-content">
                            <h3>Protected Resource</h3>
                            <p>Security level: High</p>
                        </div>
                    </div>
                </div>

                <div class="action-section">
                    <button class="btn-login" @onclick="GoToLogin">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                            <polyline points="10 17 15 12 10 7"></polyline>
                            <line x1="15" y1="12" x2="3" y2="12"></line>
                        </svg>
                        @LoginUrlName
                    </button>
                    <button class="btn-home" @onclick="GoHome">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            <polyline points="9 22 9 12 15 12 15 22"></polyline>
                        </svg>
                        @HomeUrlName

                    </button>
                </div>

                <div class="contact-section">
                    <div class="contact-card">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="16" x2="12" y2="12"></line>
                            <line x1="12" y1="8" x2="12.01" y2="8"></line>
                        </svg>
                        <div class="contact-text">
                            <strong>Need Help?</strong>
                            <p>Contact your system administrator for access permissions</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        
    </div>
</div>

@code {

    [Parameter] public string LoginUrl { get; set; } = "/";
    [Parameter] public string HomeUrl { get; set; } = "/branches";
    [Parameter] public string LoginUrlName { get; set; } = "SignIn";
    [Parameter] public string HomeUrlName { get; set; } = "Home";
    private void GoToLogin()
    {
        Navigation.NavigateTo($"{LoginUrl}");
    }

    private void GoHome()
    {
        Navigation.NavigateTo($"{HomeUrl}");
    }
}

            "Memory" => memoryUsagePercent,
            "Disk" => diskUsage,
            "Network" => (networkSend + networkReceive) / 2.0,
            "Kiosks" => (kiosksOnline * 100.0 / totalKiosks),
            _ => cpuUsage
        };
    }

    private string GetSecondaryLabel()

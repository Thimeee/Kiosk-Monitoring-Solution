    private async Task InilizeSignalR()
    {
        try
        {
            _hubConnection = new HubConnectionBuilder()
                .WithUrl(Settings.MainApiBaseUrl + "branchHub") 
                .Build();

            // Handle Patch Deployment Complete
            _hubConnection.On<int>("PatchDeploymentComplete", async patchId =>
            {
                if (NewPatchList != null)
                {
                    var getPatch = NewPatchList.FirstOrDefault(p => p.Id == patchId);
                    if (getPatch != null)
                    {
                        getPatch.Level = 3; // Mark as completed

                        if (await getSFTPFolderStructureMain(SFTPFolderPathObj, true, JWTToken))
                        {
                            // Optional: additional processing after SFTP update
                        }

                        relevantPatchesCount = 0;
                        AlertService.ShowSuccess("Patch Deployment", "Patch Deployment Successfully");

                        StateHasChanged();
                    }
                }
            });

            // Handle Patch Deployment Failed
            _hubConnection.On<int>("PatchDeploymentFailed", patchId =>
            {
                if (NewPatchList != null)
                {
                    var getPatch = NewPatchList.FirstOrDefault(p => p.Id == patchId);
                    if (getPatch != null)
                    {
                        getPatch.Level = 4; // Mark as failed
                        relevantPatchesCount = 0;
                        AlertService.ShowError("Patch Deployment", "Patch Deployment Failed");

                        StateHasChanged();
                    }
                }
            });

            // Start SignalR connection
            await _hubConnection.StartAsync();

            if (_hubConnection.State == HubConnectionState.Connected)
            {
                Console.WriteLine("✅ SignalR connected");
            }
            else
            {
                Console.WriteLine("⚠️ SignalR not connected");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"SignalR connection failed: {ex.Message}");
        }
    }



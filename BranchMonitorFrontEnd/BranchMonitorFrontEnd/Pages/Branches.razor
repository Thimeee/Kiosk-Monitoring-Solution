@page "/branches"
@using System.Net.Http.Headers
@using System.Text.Json
@using BranchMonitorFrontEnd.DTO
@using BranchMonitorFrontEnd.Helper
@using Monitoring.Shared.DTO
@using Monitoring.Shared.DTO.BranchDto
@using Monitoring.Shared.Enum
@inject NavigationManager Navigation
@layout NavbarLayout
@inject IJSRuntime JS
@inject HttpClient Http
@inject AlertService AlertService
@inject AppSettings Settings

<div class="kiosks-wrapper ">
    <div class="kiosks-content">
        @if (isLoading)
        {
            <div class="loading-container">
               <Loder Height="60px" width="60px" />
            </div>
        }
        else if (allKiosks == null || !allKiosks.Any())
        {
            <div class="no-data-container d-flex flex-column ">
                <p class="fs-3 text-center">No terminals found.</p>
                
                <button @onclick="ClearSearchAsync" class="btn-secondary mt-2">Reset</button>

            </div>
        }
        else
        {
            <div class="kiosks-section mt-4">
                <!-- Header with Search and Filters -->
                <div class="section-header">
                    <h2>All Terminals Status</h2>
                    <div class="section-actions">
                        @* <input type="text"
                               @bind="searchText"
                               @bind:event="oninput"
                               @onkeypress="HandleKeyPress"
                               placeholder="Search by branch name, code, or location..."
                               class="search-input" /> *@
                        <div class="input-wrapper">
                            <input type="text"
                                   id="patch-version"
                                   class="field-input text-white"
                                   @bind="searchText"
                                   @bind:event="oninput"
                                   @onkeypress="HandleKeyPress"
                                   placeholder="Search by branch name, code, or location..."   />
                            <div class="input-glow"></div>
                        </div>

                      <Dropdown Size="DropdownSize.None" Class="dropdown-btn">
    <DropdownToggleButton Class="text-white">
        @SelectedStatusText
    </DropdownToggleButton>

    <DropdownMenu>
        <DropdownItem @onclick="() => OnStatusSelected(null)">All Status</DropdownItem>
        <DropdownItem @onclick="() => OnStatusSelected(TerminalActive.TERMINAL_ONLINE)">Online</DropdownItem>
                                <DropdownItem @onclick="() => OnStatusSelected(TerminalActive.TERMINAL_OFFLINE)">Offline</DropdownItem>
                                <DropdownItem @onclick="() => OnStatusSelected(TerminalActive.TERMINAL_DEACTIVE)">Deactivated</DropdownItem>
                                <DropdownItem @onclick="() => OnStatusSelected(TerminalActive.TERMINAL_NOT_VERIFY)">Not Verified</DropdownItem>
    </DropdownMenu>
</Dropdown>

                        
                     

                        <button @onclick="OnSearchAsync" class="btn-secondary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg>
                            Search
                        </button>

                        <button @onclick="ClearSearchAsync" class="btn-secondary">Clear</button>
                    </div>
                </div>

                <!-- Kiosks Grid -->
                <div class="kiosks-grid">
                    @foreach (var kiosk in allKiosks)
                    {
                        <div class="kiosk-card @kiosk.Status">
                            <div class="kiosk-header">
                                <div class="kiosk-id">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H2z" />
                                        <path d="M2 5.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5zM2 7a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 2 7zm0 1.5a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z" />
                                    </svg>
                                    @kiosk.TerminalId
                                </div>
                                <span class="status-badge @kiosk.Status">@kiosk.StatusText</span>
                            </div>

                            <div class="kiosk-info">
                                <div class="info-row">
                                    <span class="info-label">Branch Code:</span>
                                    <span class="info-value">@kiosk.BranchCode</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">Branch:</span>
                                    <span class="info-value">@kiosk.Branch</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">Location:</span>
                                    <span class="info-value">@kiosk.Location</span>
                                </div>
                              
                                <div class="info-row">
                                    <span class="info-label">Last Update:</span>
                                    <span class="info-value">@kiosk.LastUpdate</span>
                                </div>
                            </div>

                            <div class="kiosk-actions">
                                @if (kiosk.branchDto.TerminalActiveStatus == TerminalActive.TERMINAL_NOT_VERIFY ||
                                                        kiosk.branchDto.TerminalActiveStatus == TerminalActive.TERMINAL_DEACTIVE)
                                {
                                    <button class="btn-action" disabled style="opacity: 0.5; cursor: not-allowed;">
                                        Disabled
                                    </button>
                                }
                                else
                                {
                                    <button @onclick="() => LoginInBranch(kiosk.branchDto)" class="btn-action">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z" />
                                            <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                                        </svg>
                                        Login
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                <div class="pagination-wrapper">
                    <div class="pagination-info">
                        Showing @startItem - @endItem of @totalKiosks kiosks
                    </div>

                    <div class="pagination-controls">
                        <button @onclick="() => OnPageChangedAsync(1)"
                                disabled="@(currentPageNumber == 1)"
                                class="btn-page">
                            &#171;
                        </button>

                        <button @onclick="() => OnPageChangedAsync(currentPageNumber - 1)"
                                disabled="@(currentPageNumber == 1)"
                                class="btn-page">
                            &#8249;
                        </button>

                        @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                        {
                            var pageNumber = i;
                            <button @onclick="() => OnPageChangedAsync(pageNumber)"
                                    class="btn-page @(currentPageNumber == pageNumber ? "active" : "")">
                                @pageNumber
                            </button>
                        }

                        <button @onclick="() => OnPageChangedAsync(currentPageNumber + 1)"
                                disabled="@(currentPageNumber == totalPages)"
                                class="btn-page">
                            &#8250;
                        </button>

                        <button @onclick="() => OnPageChangedAsync(totalPages)"
                                disabled="@(currentPageNumber == totalPages)"
                                class="btn-page">
                            &#187;
                        </button>
                    </div>

                    <div class="page-size-selector">
                        <label>Show:</label>
                        <Dropdown @ref="pageSizeDropdown" Size="DropdownSize.None" Class="dropdown-btn">
                            <DropdownToggleButton Class="text-white">
                                @pageSize
                            </DropdownToggleButton>

                            <DropdownMenu>
                                <DropdownItem @onclick="() => OnPageSizeSelected(8)">8</DropdownItem>
                                <DropdownItem @onclick="() => OnPageSizeSelected(12)">12</DropdownItem>
                                <DropdownItem @onclick="() => OnPageSizeSelected(16)">16</DropdownItem>
                                <DropdownItem @onclick="() => OnPageSizeSelected(20)">20</DropdownItem>
                                <DropdownItem @onclick="() => OnPageSizeSelected(50)">50</DropdownItem>
                            </DropdownMenu>
                        </Dropdown>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    // Pagination settings
    private int currentPageNumber = 1;
    private int pageSize = 8;
    private int totalKiosks = 0;
    private int totalPages => totalKiosks > 0 ? (int)Math.Ceiling((double)totalKiosks / pageSize) : 1;

    // Calculate display range
    private int startItem => totalKiosks > 0 ? (currentPageNumber - 1) * pageSize + 1 : 0;
    private int endItem => Math.Min(currentPageNumber * pageSize, totalKiosks);

    // Search and Filter
    private string searchText = string.Empty;
    private string selectedStatus = string.Empty;

    // Data
    private List<KioskData> allKiosks = new();
    private string? JWTToken;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await OnStartupAsync();
    }

    private async Task OnStartupAsync()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            getJWTTokens getJWT = new getJWTTokens(JS);
            if (getJWT != null)
            {
                var token = await getJWT.GetJWTLoggedInUserAsync();
                if (token != null)
                {
                    JWTToken = token;
                }

                if (JWTToken != null)
                {
                    await LoadBranchesAsync();
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Exception: {ex.Message}");
            AlertService.ShowError("Error", $"Failed to load data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadBranchesAsync()
    {
        try
        {
            if (Settings.MainApiBaseUrl != null && JWTToken != null)
            {
                var branchList = await GetAllBranchesAsync($"{Settings.MainApiBaseUrl}", JWTToken);
                if (branchList != null)
                {
                    allKiosks = GenerateKiosks(branchList);
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Exception: {ex.Message}");
            AlertService.ShowError("Error", $"Failed to load branches: {ex.Message}");
        }
    }

    private List<KioskData> GenerateKiosks(List<SelectBranchDto> totlebranch)
    {
        var kiosks = new List<KioskData>();
        foreach (var branch in totlebranch)
        {
            string status;
            string statusText;

            if (branch.TerminalActiveStatus == TerminalActive.TERMINAL_ONLINE)
            {
                status = "online";
                statusText = "Online";
            }
            else if (branch.TerminalActiveStatus == TerminalActive.TERMINAL_OFFLINE)
            {
                status = "offline";
                statusText = "Offline";
            }
            else if (branch.TerminalActiveStatus == TerminalActive.TERMINAL_DEACTIVE)
            {
                status = "deactive";
                statusText = "Deactivated";
            }
            else if (branch.TerminalActiveStatus == TerminalActive.TERMINAL_NOT_VERIFY)
            {
                status = "notverify";
                statusText = "Not Verified";
            }
            else
            {
                status = "undefined";
                statusText = "Undefined";
            }

            kiosks.Add(new KioskData
            {
                Number = branch.Id,
                BranchCode = branch.BranchId,
                TerminalId = branch.TerminalId,
                Status = status,
                StatusText = statusText,
                Branch = branch.BranchName,
                Location = branch.Location,
                Uptime = "N/A",
                LastUpdate = "N/A",
                branchDto = branch,
            });
        }
        return kiosks;
    }

    public async Task<List<SelectBranchDto>?> GetAllBranchesAsync(string baseUrl, string jwtToken)
    {
        try
        {
            var url = $"api/Branch/getAllBranch?" +
                      $"PageNumber={currentPageNumber}&" +
                      $"PageSize={pageSize}&" +
                      $"Search={Uri.EscapeDataString(searchText ?? string.Empty)}&" +
                      $"Status={selectedStatus}";

            using var client = new HttpClient { BaseAddress = new Uri(baseUrl) };
            client.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", jwtToken);

            var response = await client.GetAsync(url);
            var result = await response.Content.ReadFromJsonAsync<APIResponseCoustomizeList<SelectBranchDto, int>>();

            if (response.IsSuccessStatusCode)
            {
                if (result != null && result.StatusCode == 2 && result.Status == true)
                {
                    totalKiosks = result.Value;
                    return result.ValueList;
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.BadRequest)
            {
                if (result != null && result.StatusCode == 1 && result.Status == false)
                {
                    AlertService.ShowError("Error", $"{result.Message}");
                    return null;
                }
                else if (result != null && result.StatusCode == 0 && result.Status == false)
                {
                    AlertService.ShowError("Error", $"{result.Message}");
                    Console.WriteLine($"Unexpected response: {response.StatusCode}");
                    return null;
                }
            }

            return null;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Exception: {ex.Message}");
            AlertService.ShowError("Error", $"API call failed: {ex.Message}");
            return null;
        }
    }

    // Handle Enter key press in search
    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await OnSearchAsync();
        }
    }

    // Event Handlers
    private async Task OnSearchAsync()
    {
        currentPageNumber = 1;
        await LoadBranchesAsync();
    }

    private async Task ClearSearchAsync()
    {
        searchText = string.Empty;
        selectedStatus = string.Empty;
        currentPageNumber = 1;
        await LoadBranchesAsync();
    }

  
    private string SelectedStatusText = "All Status";

    private async Task OnStatusSelected(TerminalActive? status)
    {
        selectedStatus = status.ToString() ?? string.Empty;
        await LoadBranchesAsync();
        ;
    }


    private async Task OnPageChangedAsync(int newPageNumber)
    {
        if (newPageNumber < 1 || newPageNumber > totalPages)
            return;

        currentPageNumber = newPageNumber;
        await LoadBranchesAsync();

        await JS.InvokeVoidAsync("window.scrollTo", 0, 0);
    }

    private Dropdown? pageSizeDropdown;

    private async Task OnPageSizeSelected(int newSize)
    {
        pageSize = newSize;
        currentPageNumber = 1;

        await LoadBranchesAsync();
        await pageSizeDropdown!.HideAsync();
    }

    private int GetStartPage()
    {
        int startPage = Math.Max(1, currentPageNumber - 2);
        int endPage = Math.Min(totalPages, startPage + 4);

        if (endPage - startPage < 4)
        {
            startPage = Math.Max(1, endPage - 4);
        }

        return startPage;
    }

    private int GetEndPage()
    {
        int startPage = GetStartPage();
        return Math.Min(totalPages, startPage + 4);
    }

    private async Task LoginInBranch(SelectBranchDto branch)
    {
        try
        {
            if (JWTToken != null)
            {
                using var client = new HttpClient();
                client.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", JWTToken);

                var response = await client.PostAsJsonAsync($"{Settings.MainApiBaseUrl}api/Branch/LoginBranch",
                    new { branch.Id, branch.TerminalId });

                var result = await response.Content.ReadFromJsonAsync<APIResponseSingleValue>();

                if (response.IsSuccessStatusCode)
                {
                    if (result != null && result.StatusCode == 2 && result.Status == true)
                    {
                        await JS.InvokeVoidAsync("localStorage.setItem", "branchToken", result.Value);
                        Navigation.NavigateTo("/branchDashbord");
                    }
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.BadRequest)
                {
                    if (result != null && result.Status == false)
                    {
                        AlertService.ShowError("Login Failed", $"{result.Message}");
                    }
                }
            }
            else
            {
                AlertService.ShowError("Login Error", "Token not found. Please login again.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Exception: {ex.Message}");
            AlertService.ShowError("Error", $"Login failed: {ex.Message}");
        }
    }


}

